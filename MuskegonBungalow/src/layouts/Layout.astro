---
interface Props {
	title?: string;
}

const { title = "Refresh Stays - Muskegon Cottage | Lake Michigan Vacation Rental" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content="Experience tranquility in our peaceful Muskegon cottage. Walking distance to Lake Michigan, pet-friendly, 3 bedrooms, fully equipped kitchen. Perfect for family getaways." />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://refreshmuskegon.pages.dev" />
		<meta property="og:title" content="Refresh Stays - Muskegon Cottage | Lake Michigan Vacation Rental" />
		<meta property="og:description" content="Experience tranquility in our peaceful Muskegon cottage. Walking distance to Lake Michigan, pet-friendly, 3 bedrooms, fully equipped kitchen." />
		<meta property="og:image" content="/favicon.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://refreshmuskegon.pages.dev" />
		<meta property="twitter:title" content="Refresh Stays - Muskegon Cottage | Lake Michigan Vacation Rental" />
		<meta property="twitter:description" content="Experience tranquility in our peaceful Muskegon cottage. Walking distance to Lake Michigan, pet-friendly, 3 bedrooms, fully equipped kitchen." />
		<meta property="twitter:image" content="/favicon.png" />

		<!-- Additional SEO Tags -->
		<meta name="keywords" content="Muskegon cottage, Lake Michigan rental, vacation home, pet-friendly rental, Muskegon vacation, beach house" />
		<meta name="author" content="Refresh Stays" />
		<link rel="canonical" href="https://refreshmuskegon.pages.dev" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
