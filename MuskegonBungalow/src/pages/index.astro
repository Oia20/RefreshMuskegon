];
---

<Layout>
  <main class="min-h-screen">
    <Hero />
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-24 bg-emerald-700">
		<AboutProperty />
	</div>

    <PhotoGallery client:load photos={photos} />
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-24">
      <Amenities />
      <Reviews />
      <Calendar client:load />
      <!-- <ContactSection /> -->
    </div>
  </main>
</Layout>
